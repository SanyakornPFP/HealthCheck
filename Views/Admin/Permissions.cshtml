@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // ดักจับเหตุการณ์เมื่อ Modal ถูกเปิด
            $('#detailModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // ปุ่มที่ถูกคลิก
                var userID = button.data('userid'); // ค่า UserID จาก data attribute

                $.ajax({
                    url: '@Url.Action("GetDetailsPermissions", "Admin")',
                    type: 'GET',
                    data: { UserID: userID }, // Send UserID to get relevant data
                    success: function (response) { // เมื่อ AJAX สำเร็จ

                        // Fill in the form fields
                        $('#txtUserID').val(response.groupUserID);
                        $('#modaltxtUsername').val(response.groupName);
                        $('#modaltxtName').val(response.firstName + " " + response.lastName);

                        var permissions = response.permissions; // Received permissions data

                        function getIcon(value) {
                            return value === true
                                ? '<i class="fa fa-check-square-o text-success"></i>' // แสดงไอคอนเช็คถ้าค่าเป็น `true`
                                : '<i class="fa fa-ban text-danger"></i>'; // แสดงไอคอนแบนถ้าค่าเป็น `false`
                        }

                        // ตั้งค่า checkbox ตามค่าใน response
                        for (var menuID in permissions) {
                            if (permissions.hasOwnProperty(menuID)) {
                                // ตรวจสอบและกำหนดค่า checkbox
                                var canView = permissions[menuID].canView || false;
                                var canCreate = permissions[menuID].canCreate || false;
                                var canUpdate = permissions[menuID].canUpdate || false;
                                var canDelete = permissions[menuID].canDelete || false;

                                $('#modalmenuID' + menuID + '_view').html(getIcon(canView));
                                $('#modalmenuID' + menuID + '_create').html(getIcon(canCreate));
                                $('#modalmenuID' + menuID + '_update').html(getIcon(canUpdate));
                                $('#modalmenuID' + menuID + '_delete').html(getIcon(canDelete));
                            }
                        }
                    },
                    error: function (xhr, status, error) { // เมื่อ AJAX ล้มเหลว
                        console.error("Error:", error); // จัดการข้อผิดพลาด
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#cancelBtnT').on('click', function () {
                $('.row').hide();
            });

            // เมื่อคลิกปุ่มแก้ไข
            $('.editBtn').on('click', function (e) {
                e.preventDefault(); // Prevent page refresh

                var userID = $(this).data('userid'); // Get the UserID from the data attribute

                // Send AJAX request to fetch permissions
                $.ajax({
                    url: '@Url.Action("GetDetailsPermissions", "Admin")',
                    type: 'GET',
                    data: { UserID: userID }, // Send UserID to get relevant data
                    success: function (response) {
                        if (response.success) {
                            var permissions = response.permissions; // Received permissions data

                            // Show the hidden form
                            $('.row').show();

                            // Fill in the form fields
                            $('#txtUserID').val(response.groupUserID);
                            $('#txtUsername').val(response.groupName);
                            $('#txtName').val(response.firstName + "  " + response.lastName);
                            $('#showAllData').prop('checked', response.showAllData);
                            // console.table(permissions); // Log the permissions data to the console

                            // ตั้งค่า checkbox ตามค่าใน response
                            for (var menuID in permissions) {
                                if (permissions.hasOwnProperty(menuID)) {
                                    // ตรวจสอบและกำหนดค่า checkbox
                                    var canView = permissions[menuID].canView || false;
                                    var canCreate = permissions[menuID].canCreate || false;
                                    var canUpdate = permissions[menuID].canUpdate || false;
                                    var canDelete = permissions[menuID].canDelete || false;

                                    $('#menuID' + menuID + '_view').prop('checked', canView);
                                    $('#menuID' + menuID + '_create').prop('checked', canCreate);
                                    $('#menuID' + menuID + '_update').prop('checked', canUpdate);
                                    $('#menuID' + menuID + '_delete').prop('checked', canDelete);
                                }
                            }
                        } else {
                            Swal.fire('Error', 'Could not fetch user details', 'error');
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        handleAjaxError(xhr);
                    }
                });
            });

            $('#updateBtn').click(function (event) {
                event.preventDefault(); // Prevent form submission

                // Prepare data object to send via AJAX
                var formData = {
                    UserID: $('#txtUserID').val(), // Assuming you set this value somewhere
                    Permissions: []
                };

                // Loop through each checkbox to collect permission data
                $('[id^="menuID"]').each(function () {
                    var menuID = $(this).attr('id').replace('menuID', '').replace('_view', '').replace('_create', '').replace('_update', '').replace('_delete', '');
                    var permission = {
                        MenuID: parseInt(menuID), // Ensure menuID is an integer
                        CanView: $('#menuID' + menuID + '_view').prop('checked'),
                        CanCreate: $('#menuID' + menuID + '_create').prop('checked'),
                        CanUpdate: $('#menuID' + menuID + '_update').prop('checked'),
                        CanDelete: $('#menuID' + menuID + '_delete').prop('checked')
                    };
                    formData.Permissions.push(permission);
                });

                // Show confirmation prompt
                Swal.fire({
                    title: 'ยืนยันการบันทึก?',
                    text: "คุณต้องการบันทึกข้อมูลนี้หรือไม่?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d3d3d3',
                    confirmButtonText: 'ใช่, บันทึก!',
                    cancelButtonText: 'ยกเลิก'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Send data via AJAX if confirmed
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("UpdatePermissions", "Admin")',
                            data: JSON.stringify(formData),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'บันทึกแล้ว!',
                                        'ข้อมูลของคุณถูกบันทึกแล้ว.',
                                        'success'
                                    ).then(() => {
                                        window.location.reload(); // Refresh the page on success
                                    });
                                } else {
                                    Swal.fire('ผิดพลาด', response.message, 'error');
                                }
                            },
                            error: function (xhr) {
                                handleAjaxError(xhr); // Custom function to handle AJAX errors
                            }
                        });
                    }
                });
            });

        });
    </script>
}
